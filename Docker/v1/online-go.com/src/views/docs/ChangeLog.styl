#docs-changelog {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: justify;

    h2 {
        margin-top: 2em;
    }

    dl {
        max-width: 30rem;
        padding-left: 1rem;
        padding-right: 1rem;
    }

    dd {
        margin-left: 0;
        padding-left: 0;
    }

    li {
        text-align: justify;
        padding-top: 0.3rem;
        padding-bottom: 0.3rem;
    }
}
